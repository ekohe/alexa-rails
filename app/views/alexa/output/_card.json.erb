<% content = render(
      file: response.partial_path(format: :text),
      locals: response.view_locals
    ) %>
<% card_type = (content_for(:card_type) || "Simple").strip %>

<%= raw render(
      partial: "alexa/output/cards/#{card_type.downcase}",
      locals: {
        response: response,
        content: content
      }
    ) %>
